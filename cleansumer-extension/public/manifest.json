{
  "short_name": "Cleansumer",
  "name": "Cleansumer Browser Extension",
  "description": "Rotten Tomatoes for Corporate Ethics",
  "version": "0.1",
  "manifest_version": 3,
  "action": {
    "default_popup": "index.html",
    "default_title": "Open the popup"
  },
  "icons":
    {
      "16": "circle.ico",
      "48": "circle.ico",
      "128": "circle.ico"
    },
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["./static/js/content.js"]
    }
  ]
}

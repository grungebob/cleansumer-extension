{
    "name": "Cleansumer",
    "version": "0.0.1",
    "manifest_version": 2,
    "description": "Rotten Tomatoes for Company Ethics",
    "browser_action": {
        "default_title": "Cleansumer",
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "icons/temp.png",
        "48": "icons/temp.png",
        "128": "icons/temp.png"
    },
    "default_locale": "en",
    "background": {
        "scripts": [
            "js/background.js"
        ],
        "persistent": true
    },
    "permissions": [
        "https://*/*",
        "activeTab",
        "webRequest",
        "storage",
        "contextMenus",
        "tabs"
    ],
    "content_security_policy": "script-src 'self' https://bizdataapi.azurewebsites.net; object-src 'self'",
    "content_scripts": [
        {
            "matches": [
                "https://*/*"
            ],
            "js": [
                "js/content.js"
            ]
        }
    ]
}
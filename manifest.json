{
    "name": "Cleansumer Demo",
    "version": "0.0.7",
    "manifest_version": 3,
    "description": "Rotten Tomatoes for Company Ethics",
    "action": {
        "default_title": "Cleansumer",
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "icons/temp.png",
        "48": "icons/temp.png",
        "128": "icons/temp.png"
    },
    "default_locale": "en",
    "background": {
        "service_worker": "js/background.js",
        "type": "module"
    },
    "permissions": [
        "activeTab",
        "storage",
        "contextMenus",
        "tabs"
    ],
    "host_permissions": [
        "https://*/*",
        "https://bizdataapi.azurewebsites.net/*"
    ],
    "content_security_policy": 
    {
      "script-src": "self",
      "object-src": "self"
    },
    "content_scripts": [
        {
            "matches": [
                "https://*/*"
            ],
            "js": [
                "js/content.js"
            ]
        }
    ]
}